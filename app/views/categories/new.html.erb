<h1 class="text-center">Create a new category</h1>
<%= render "shared/errors", obj: @category %>

<%= form_for @category , :html => {:class => 'form-horizontal', role: 'form'} do |f| %>
  <div class="form-group">
    <%= f.label :name , :class => 'col-sm-2 control-label' %>
    <div class="col-sm-8">
      <%= f.text_field :name , :class => 'form-control',placeholder: "Category name" %>
      <!-- <input type="email" class="form-control" id="inputEmail3" placeholder="Email"> -->
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>
<div class="col-xs-4 col-xs-offset-4 text-center">
  [ <%= link_to 'Back to the home' ,root_path %> ]
</div>
