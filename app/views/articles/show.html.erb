<h2 class="text-center">Title : <%= @article.title %></h3>
<div class="well col-xs-8 col-xs-offset-2">
  <h4 class="text-center"><strong>Description</strong></h4>
  <hr>
  <%= simple_format(@article.description) %>
  <div class="article-actions">
    <%= link_to "Edit this Article" , edit_article_path(@article) , class: "btn btn-primary btn-xs" %>
    <%= link_to "Delete Articles", article_path(@article) , method: :delete ,data: {confirm: "Are you sure"} , class: "btn btn-danger btn-xs"%>
    <%= link_to "View all Articles" , articles_path , class: "btn btn-success btn-xs" %>
  </div>
</div>
