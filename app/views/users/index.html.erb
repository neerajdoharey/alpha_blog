<h1 class="text-center">Alpha Blog users list</h1>
<div class="text-center">
  <%= will_paginate %>
</div>
<% @users.each do |user| %>
  <ul class="listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <li><%= link_to gravatar_for(user) , user_path(user) %></li>
        <li class="article-title">
          <%= link_to user.username , user_path(user) %>
        </li>
        <li><small><%= pluralize(user.articles.count , "Article")%></small></li>
        <% if logged_in? && current_user.admin? %>
          <li><%= link_to "Delete User", user_path(user), class: "btn btn-danger btn-xs", method: :delete, data: {confirm: "Are you sure"}  %></li>
        <% end %>
      </div>
    </div>
  </ul>
<% end %>
<div class="text-center">
  <%= will_paginate %>
</div>
